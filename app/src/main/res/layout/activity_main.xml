<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212">

    <FrameLayout
        android:id="@+id/cameraContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/layoutControls">

        <androidx.camera.view.PreviewView
            android:id="@+id/previewView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <View
            android:layout_width="252dp"
            android:layout_height="372dp"
            android:layout_gravity="center"
            android:background="@drawable/face_overlay" />

        <View
            android:id="@+id/scanLine"
            android:layout_width="250dp"
            android:layout_height="3dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="100dp"
            android:background="#BB86FC" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/layoutControls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#1E1E1E"
        android:elevation="8dp"
        android:orientation="vertical"
        android:padding="20dp">

        <Button
            android:id="@+id/btnLiveness"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#03DAC5"
            android:text="ðŸ›¡ï¸ PRUEBA DE VIDA (VIDEO)"
            android:textColor="#000000"
            android:textStyle="bold"
            app:cornerRadius="30dp" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/swMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:checked="true"
            android:text="Modo ComparaciÃ³n (2 Fotos)"
            android:textColor="#FFFFFF"
            app:thumbTint="#BB86FC"
            app:trackTint="#77FFFFFF" />

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="Listo para escanear"
            android:textAlignment="center"
            android:textColor="#BB86FC"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnSwitchCamera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#44FFFFFF"
            android:text="ðŸ”„ Alternar CÃ¡mara"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnCapture"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:backgroundTint="#BB86FC"
            android:text="CAPTURAR ROSTRO"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            app:cornerRadius="30dp" />
    </LinearLayout>

</RelativeLayout>